{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ES2023"],
    "declaration": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "preserveWatchOutput": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "include": ["src"],
}
